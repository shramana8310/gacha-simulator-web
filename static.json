{
  "root": "build/",
  "routes": {
    "/**": "index.html"
  },
  "canonical_host": "${HOST}",
  "https_only": true,
  "proxies": {
    "/api/": {
      "origin": "${API_URL}"
    },
    "/img/": {
      "origin": "${IMG_URL}"
    }
  },
  "headers": {
    "/img/**": {
      "Cache-Control": "public, max-age=604800"
    }
  }
}